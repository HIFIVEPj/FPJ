<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd">
<bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" />
<bean id="customUserDetailService" class="fp.member.service.CustomUserDetailService">
	<!-- <beans:constructor-arg name ="sqlSession" ref = "sqlSession" /> -->
</bean>

    <security:http auto-config="true" use-expressions="true">
    	<security:intercept-url pattern="/login" access="permitAll" /> 
    	<security:intercept-url pattern="/member/**" access="permitAll" />    
    <!--<security:intercept-url pattern="/resources/**" access="permitAll"/>            
        <security:intercept-url pattern="/**" access="hasRole('ROLE_USER')"/>
    	<security:intercept-url pattern="/member/login" access="permitAll" /> 
      	<security:intercept-url pattern="/member/user" access="hasAnyRole('ROLE_USER','ROLE_MEMBER','ROLE_ADMIN')" />
        <security:intercept-url pattern="/member/member" access="hasAnyRole('ROLE_MEMBER','ROLE_ADMIN')" />        
        <security:intercept-url pattern="/member/admin" access="hasRole('ROLE_ADMIN')" /> 
        <security:intercept-url pattern="/login" access="permitAll" /> -->
     
     <!--커스터마이징 추가 -->
      <security:form-login login-page="/member/login" 
   			username-parameter="email"
			password-parameter="pwd"
			login-processing-url="/login_check"		
			authentication-failure-url="/member/login?err=true"
			default-target-url="/index" />
	
	<security:session-management>
	<security:concurrency-control max-sessions="1" expired-url="/" />
	</security:session-management>
	<security:access-denied-handler error-page="/" />
        
        <!-- 로그아웃 관련 처리 -->
        <security:logout delete-cookies=
        "JSESSIONID,SPRING_SECURITY_REMEMBER_ME_COOKIE"
            logout-success-url="/" 
            logout-url="/"
            invalidate-session="true" />

        <!-- ref는 bean의 id이다. -->
        <!-- 자동 로그인 관련 쿠키 저장, 세션이 종료된 후에도 자동 로그인할 수 있는 기능 86400 1일, 604800 7일 -->
        <security:remember-me key="userKey" token-validity-seconds="86400" />
  	<!-- 여기 한번 추가해봤음 url 제대로 고치기 -->
    </security:http>

    <security:authentication-manager>
        <security:authentication-provider user-service-ref="customUserDetailService">    
        <security:password-encoder ref="bcryptPasswordEncoder" />
        </security:authentication-provider>
    </security:authentication-manager>
    
    
	    <!-- @Secured 어노테이션 활성화, 사용 권한 제한 -->
    <security:global-method-security secured-annotations="enabled" />


</beans>
